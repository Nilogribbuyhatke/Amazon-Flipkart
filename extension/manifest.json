{
  "manifest_version": 3,
  "name": "Amazon-Flipkart",
  "version": "1.0",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "*://localhost/*",
    "*://*.myntra.com/*",
    "*://*.amazon.in/*",
    "*://*.flipkart.com/*"
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.myntra.com/*",
        "*://*.amazon.in/*",
        "*://*.flipkart.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}